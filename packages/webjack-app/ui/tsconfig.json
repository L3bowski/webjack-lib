{
    "compilerOptions": {
        "outDir": "./dist",
        // this aligns with Vue's browser support
        "target": "es5",
        // if using webpack 2+ or rollup, to leverage tree shaking:
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "./src/main.ts",
        "./src/module-types.d.ts"
    ]
}