<!doctype html>

<html lang="en">
<head>
    <title>Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="author" content="Carles Capellas" />
    <meta name="description" content="description" />

    <link href="/plugins/bootstrap-3.2.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/plugins/font-awesome-4.4.0/css/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="<%= asset('css/main.css') %>" rel="stylesheet" type="text/css" />
</head>

<body>
    <button type="button" onclick="createGame();">Empty table</button>
    <button type="button" onclick="joinGame();">Join table</button>
    Table Id: <input type="text" id="table-id" />
    <button type="button" onclick="startRound();">Start round</button>
    <button type="button" onclick="endRound();">End round</button>
    <button type="button" onclick="clearRound();">Clear round</button>
    <div id="results"></div>
  
    <script src="/plugins/jquery-2.1.1/jquery-2.1.1.min.js" type="text/javascript"></script>
    <script src="/plugins/bootstrap-3.2.0/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="<%= asset('js/app.js') %>" type="text/javascript"></script>

    <script>
        var tableId, playerId;

        function render(stringifiedData) {
            var results = document.getElementById('results');
            results.innerHTML = '';

            var data = JSON.parse(stringifiedData);
            if (data.players) {
                data.players.forEach(p => {
                    var serializedHands = '';
                    if (p.handSet != null) {
                        serializedHands = p.handSet.hands.reduce((sH, hand) =>
                            sH + hand.cards.reduce((sC, card) => sC + card.symbol + card.suit + ', ', '') + ' (' + hand.score + ') ' + hand.status + ' / ', '');
                    }
                    results.innerHTML += p.name + ' (' + p.earningRate + '): ' + serializedHands;
                    if (data.currentIndex != null && data.players[data.currentIndex] == p && p.id == playerId) {
                        results.innerHTML += '<button type="button" onclick="hit();">Hit</button>' +
                                                '<button type="button" onclick="stand();">Stand</button>' +
                                                '<button type="button" onclick="double();">Double</button>' +
                                                '<button type="button" onclick="split();">Split</button>';
                    }
                    results.innerHTML += '<br />';
                });
            }
        }

        function clearRound(){
            $.get('/clear-round?tableId=' + tableId).then(render);
        }

        function createGame(){
            $.get('/create').then(response => {
                var data = JSON.parse(response);
                tableId = data.tableId;
                playerId = data.playerId;
                setInterval(() =>  $.get('/get?tableId=' + tableId).then(render), 4000);
            });
        }

        function double(){
            $.get('/make-decision?tableId=' + tableId + '&playerId=' + playerId + '&decision=Double').then(render);
        }

        function endRound(){
            $.get('/end-round?tableId=' + tableId).then(render);
        }

        function hit(){
            $.get('/make-decision?tableId=' + tableId + '&playerId=' + playerId + '&decision=Hit').then(render);
        }

        function joinGame(){
            tableId = $('#table-id').val();
            $.get('/join?tableId=' + tableId).then(response => {
                playerId = response;
                $.get('/get?tableId=' + tableId).then(render);
            });
            setInterval(() =>  $.get('/get?tableId=' + tableId).then(render), 4000);
        }

        function split(){
            $.get('/make-decision?tableId=' + tableId + '&playerId=' + playerId + '&decision=Split').then(render);
        }

        function stand(){
            $.get('/make-decision?tableId=' + tableId + '&playerId=' + playerId + '&decision=Stand').then(render);
        }

        function startRound(){
            $.get('/start-round?tableId=' + tableId).then(render);
        }
    </script>

</body>
</html>